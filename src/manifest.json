{
	"manifest_version": 3,
	"icons": {
		"16": "icon/16.png",
		"32": "icon/32.png",
		"48": "icon/48.png",
		"96": "icon/96.png",
		"128": "icon/128.png"
	},
	"action": {
		"default_popup": "src/popup.html"
	},
	"background": {
		"service_worker": "src/background.js"
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["src/content.js"],
			"run_at": "document_idle"
		}
	],
	"host_permissions": ["*://*/*"],
	"permissions": ["activeTab", "storage", "cookies"]
}
